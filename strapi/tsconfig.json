{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "*": ["node_modules/@types/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./config/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/"
  ]
}
